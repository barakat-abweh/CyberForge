<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MainController" spacing="10" padding="10">

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Connection Name"/>
        <TextField fx:id="protocolField" promptText="Protocol (e.g., SSH)"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="hostField" promptText="Host (e.g., 192.168.1.1)"/>
        <TextField fx:id="portField" promptText="Port (Default: 22)"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="usernameField" promptText="Username"/>
        <Button fx:id="addButton" text="Add Connection"/>
    </HBox>

    <Label text="Connections:"/>
    <ListView fx:id="connectionList"/>

</VBox>
